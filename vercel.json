{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "rewrites": [
    { "source": "/api/:path*", "destination": "https://agrolinkbackend.onrender.com/api/:path*" },
    { "source": "/((?!api|assets|.*\\..*).*)", "destination": "/index.html" }
  ],
  "crons": [
    { "path": "/api/warm", "schedule": "*/5 * * * *" }
  ]
}
